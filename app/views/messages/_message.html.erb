<div id="<%= dom_id message %>" class="scaffold_record">
  <p>
    <strong>Room:</strong>
    <%= message.room %>
  </p>

  <p>
    <strong>From:</strong>
    <%= message.from %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= message.content %>
  </p>

  <p>
    <%= link_to "Show this message", message %>
  </p>
</div>
